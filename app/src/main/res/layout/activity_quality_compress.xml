<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.glidedemo.ui.QualityCompressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_compress_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取值在0到100之间，超过则默认为100" />

            <EditText
                android:id="@+id/edit_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txt_compress_hint"
                android:ems="10"
                android:inputType="number" />

            <Button
                android:id="@+id/btn_compress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/edit_quality"
                android:onClick="onClick"
                android:text="开始压缩" />

            <CheckBox
                android:id="@+id/chx_is_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_compress_hint"
                android:layout_toEndOf="@+id/btn_compress"
                android:onClick="onClick"
                android:text="是否保存到本地" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_bitmap_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</ScrollView>
